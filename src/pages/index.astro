  <script hoist>
    // Gradient fade-in
    const gradient = document.querySelector('.gradient-wrapper');
    if (gradient) {
      gradient.style.opacity = '0';
      gradient.style.transition = 'opacity 2.4s ease-out';
      requestAnimationFrame(() => gradient.style.opacity = '0.5');
    }

    // Avatar animation
    const avatarWrapper = document.querySelector('.avatar-wrapper');
    const avatar = document.querySelector('.avatar');
    const colorsWrapper = document.querySelector('.colors-wrapper');
    if (avatarWrapper && avatar) {
      avatarWrapper.style.transform = 'scale(1.5)';
      avatarWrapper.style.filter = 'blur(8px)';
      avatar.style.opacity = '0';
      document.querySelectorAll('.color').forEach(c => {
        c.style.transform = 'translateY(-80px)';
        c.style.filter = 'blur(8px)';
      });
      requestAnimationFrame(() => {
        avatarWrapper.style.transition = 'all 0.6s ease-out';
        avatarWrapper.style.transform = 'scale(1)';
        avatarWrapper.style.filter = 'blur(0)';
        avatar.style.transition = 'opacity 0.6s ease-in-out 0.2s';
        avatar.style.opacity = '1';
        document.querySelectorAll('.color').forEach((c, i) => {
          c.style.transition = `all 0.4s ease-out ${i * 0.03}s`;
          c.style.transform = 'translateY(0)';
          c.style.filter = 'blur(0)';
          c.style.borderRadius = '0%';
        });
      });
      setTimeout(() => colorsWrapper?.remove(), 1000);
    }

    // Heading words animation
    document.querySelectorAll('.word').forEach((word, i) => {
      word.style.opacity = '0';
      word.style.transform = 'translateY(8px)';
      word.style.filter = 'blur(4px)';
      setTimeout(() => {
        word.style.transition = 'all 0.8s ease-out';
        word.style.opacity = '1';
        word.style.transform = 'translateY(0)';
        word.style.filter = 'blur(0)';
      }, 600 + i * 25);
    });

    // Skills / Toolbox glow on scroll
    const observer = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        entry.target.classList.toggle('active', entry.isIntersecting);
      });
    }, { rootMargin: '-10%' });

    document.querySelectorAll('.container').forEach(c => observer.observe(c));
  </script>
